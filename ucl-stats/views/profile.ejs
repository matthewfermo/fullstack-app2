<!doctype html>
<html>

<head>
  <title>UCL Stat Tracker</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container">

    <div class="row">
      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6">
        <div class="well">

          <% if (user.local.email) { %>
            <p>
              <!-- <strong>id</strong>: <%= user._id %><br> -->
              <strong>email</strong>: <%= user.local.email %><br>
                <strong>password</strong>: <%= user.local.password %>
            </p>
            <a href="/unlink/local" class="btn btn-default">Unlink</a>
            <a href="/logout" class="btn btn-default btn-sm">Logout</a>

            <% } else { %>
              <a href="/connect/local" class="btn btn-default">Connect Local</a>
              <% } %>
        </div>
      </div>
      <div class="col-sm-6">
        <h3>Player Stats</h3>
        <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span class="name">
                <%= messages[i].name %>
              </span>
              <span class="minutes">
                <%= messages[i].minutes %> Mins
              </span>
              <span class="goals">
                <%= messages[i].goals %> Goals
              </span>
              <span class="assists">
                <%= messages[i].assists %> Assists
              </span>
              <span><i class="fa fa-trash" aria-hidden="true"></i><span>
                  <span><i class="fas fa-edit" aria-hidden="true"></i></span>
                  <span><i class="fas fa-save" aria-hidden="true"></i></span>
            </li>
            <% } %>
        </ul>

        <h2>Enter Player</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" placeholder="Player" name="name">
            <input type="number" placeholder="Minutes" name="minutes">
            <input type="number" placeholder="Goals" name="goals">
            <input type="number" placeholder="Assists" name="assists">
            <button type="submit">Submit</button>
          </form>
      </div>
      <% } %>

    </div>

    <script src="main.js"></script>
</body>

</html>